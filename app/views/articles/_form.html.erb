<%= form_for @article do |f| %>
<div class="control-group">
    <%= f.label :title %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field span6' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :content %>
    <div class="controls">
      <%= f.text_area :content, :class => 'text_area span6' %>
    </div>
  </div>

  <div class='category-control'>
    <%= f.label 'File under at least one category' %>
    <% Category.all.order(name: :asc).each do |category| %>
      <div>
        <%= check_box_tag "article[category_ids][]", category.id %>
        <%= category.name %>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <div class="btn-group">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', articles_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>