<h1> Welcome to Wikiful. Here are some recent articles </h1>
<% @recent_articles.each do |article| %>
<div>
	<h3><%= link_to article.title, article %></h3>
	<div class = "article-info">
		Published <%= article.created_at.strftime('%b %d, %Y') %> | 
		Filed under: <%= article.categories.map {|category| link_to category.name, category_path(category.id)}.join(', ').html_safe %>
		</div>
	<div><%= truncate(article.content, :length => 100) %>
		<br /> <%= link_to "Read more", article %>
	</div> 
</div>
<% end %> 